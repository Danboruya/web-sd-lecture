<p id="notice"><%= notice %></p>

<h1><%= t 'posts' %></h1>

<br>
<% if @posts.size == 0 %>
  <h3><%= (t 'there_is_no_post') %></h3>
  <br />
<% else %>
  <table>
    <thead>
    <tr>
      <th><%= t 'title' %></th>
      <th><%= t 'text' %></th>
      <th><%= t 'post_time' %></th>
      <th colspan="3"><%= t 'operations' %></th>
    </tr>
    </thead>

    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.text.truncate(32) %></td>
        <!--<td><%#= post.created_at.strftime("%Y/%m/%d/ %a | %I:%M %p") %></td>-->
        <td><%= l post.created_at, formats: :custom1 %></td>
        <td><%= link_to (t 'show'), post %></td>
        <td><%= link_to (t 'edit'), edit_post_path(post) %></td>
        <td><%= link_to (t 'remove'), post, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br />
<% end %>

<%= link_to (t 'new_post'), new_post_path %>
